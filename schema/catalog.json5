{
	// Das Federated Catalog (FedCat) Node Definition
	//
	//   Catalog (0.5)
	//
	// This defines a simple, recursive container for catalog nodes and node
	// references.
	
	"$schema":"http://json-schema.org/draft/2020-12/schema",

	// Default baseURL: https://das2.org/schema/cat-0.7/
	"$id":"catalog.json5",

	// All nodes have these properties
	"$ref":"node.json5",

	"title":"A potentially recursive collection of das FedCat nodes",
	"type":"object",

	"properties":{
		"catalog":{
			"type":"object",
			"additionalProperties":{
				"oneOf":[
					{"$ref":"reference.json5"},
					{"$ref":"#"}
				]
				//"$ref":"reference.json5"
			},
		},
		"separator":{"type":["null", "string"], "maxLength":16, "pattern":"[:/\\.,;]+"}
	},

	"required":["catalog"],

	"unevaluatedProperties": false
}